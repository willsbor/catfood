
<%= form_for @price_log, :url => users_price_logs_path do |f| %>
    <%= f.select :product_info_id, product_info_options, {:prompt => 'select Item'}%>
    <br>
    <div id="price_log_info_content">
        <%= f.label :log_date, "Log_Date" %>
        <%= f.date_select :log_date, {selected: Date.today} %>
        <br>

        <%= f.label :price, "Price" %>
        <%= f.select :price, [] %>
        <%#= f.text_field :price %>
        <br>
        <%= f.label :location, "Location" %>
        <%= f.text_field :location %>
        <br>
        <%= f.label :capacity, "Capaticy" %>
        <%= f.text_field :capacity %>
        <br>
        <%= f.label :cap_unit, "Capaticy Unit" %>
        <%= f.text_field :cap_unit %>
        <br>
        <%= f.submit "Create" %>
        <br>
    </div>
<% end %>




