root = exports ? this
root.price_log_product_info_change = ->
  index = $('#price_log_product_info_id').val()
  selectProductPath = selectProductBasePath + index + "/product_info_logs.js"

  if index isnt ''
    $.ajax selectProductPath,
      type: 'GET'
      dataType: 'script'
  else 
    $('#price_log_info_content').css({ display: 'none' })


   

